root = true

# General configuration
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.{.cpp,.h}]
# Options not ubiquitous, but useful
indent_brace_style = K&R
spaces_around_brackets = none

[*.{lua,xml}]
indent_size = 4

[**.yml]
indent_style = space
indent_size = 2
